<!DOCTYPE html>
<html>
<head>
	<meta charset=utf-8 />
	<title>Worksheet</title>
</head>
<body>
	<table>
		<tr>
			<th>Login</th>
			<th>ID</th>
			<th>Name</th>
		</tr>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.login %></td>
				<td><%= user.id %></td>
				<td><%= "#{user.firstname} #{user.lastname}" %></td>
			</tr>
		<% end %>
	</table>
</body>
</html>